{
  "exclude": [
    "^(node_modules|bower_components|\\.imdone|target|build|dist|logs)[\\/\\\\]?|\\.(git|svn|hg|npmignore)|\\~$|\\.(jpg|png|gif|swp|ttf|otf)$"
  ],
  "watcher": true,
  "keepEmptyPriority": false,
  "code": {
    "include_lists": [
      "TODO",
      "DOING",
      "DONE",
      "PLANNING",
      "FIXME",
      "ARCHIVE",
      "HACK",
      "CHANGED",
      "XXX",
      "IDEA",
      "NOTE",
      "REVIEW",
      "BACKLOG"
    ]
  },
  "lists": [
    {
      "name": "TODO",
      "hidden": false
    },
    {
      "name": "BACKLOG",
      "hidden": true
    },
    {
      "name": "DOING",
      "hidden": false
    },
    {
      "name": "ARCHIVE",
      "hidden": true
    }
  ],
  "marked": {
    "gfm": true,
    "tables": true,
    "breaks": false,
    "pedantic": false,
    "smartLists": true,
    "langPrefix": "language-"
  },
  "languages": {
    ".cash": {
      "name": "Cash",
      "symbol": "$",
      "block": {
        "start": "<$",
        "end": "$>",
        "ignore": "$"
      }
    }
  },
  "meta": {
    "gh": {
      "urlTemplate": "https://github.com/imdone/imdone-core/issues/%s",
      "titleTemplate": "View github issue %s",
      "icon": "icon-octoface"
    }
  }
}